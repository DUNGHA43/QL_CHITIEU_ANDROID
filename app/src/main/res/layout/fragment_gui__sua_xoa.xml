<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".gui.gui_SuaXoaFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/background_color_login"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:text="THÔNG TIN CHI TIẾT" />
            </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:text="Số tiền"
                android:textAlignment="textEnd"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/txtSoTienSuaXoa"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:inputType="text"
                    android:text="0"
                    android:textAlignment="textEnd"
                    android:textColor="#B71C1C"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="đ"
                    android:textAlignment="textEnd"
                    android:textAllCaps="false"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </LinearLayout>
            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:background="#97D8D3D3" />
        </LinearLayout>

            <LinearLayout
                android:id="@+id/lineartxtHangMucSuaXoa"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@drawable/custom_linearlayout">

                <TextView
                    android:id="@+id/txtHangMucSuaXoa"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Chọn hạng mục"
                    android:textSize="24sp"
                    android:padding="10dp"
                    android:textColor="@color/black"
                    android:drawableLeft="@drawable/baseline_question_mark_24"
                    android:drawablePadding="10dp"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearHangMucSuaXoa"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@drawable/custom_linearlayout">

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:stretchColumns="*">

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp">

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/btnAnUongSuaXoa"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Ăn uống"
                            android:textSize="12sp"
                            android:background="@drawable/custom_button_danhmuc"
                            android:textColor="@color/black"
                            android:drawableTop="@drawable/food"
                            android:padding="10dp"
                            />

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/btnDiLaiSuaXoa"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Đi lại"
                            android:textSize="12sp"
                            android:background="@drawable/custom_button_danhmuc"
                            android:textColor="@color/black"
                            android:drawableTop="@drawable/car"
                            android:padding="10dp"/>

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/btnTrangPhucSuaXoa"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Trang phục"
                            android:textSize="12sp"
                            android:background="@drawable/custom_button_danhmuc"
                            android:textColor="@color/black"
                            android:drawableTop="@drawable/shirt"
                            android:padding="10dp"/>

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/btnSucKhoeSuaXoa"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Sức khỏe"
                            android:textSize="12sp"
                            android:background="@drawable/custom_button_danhmuc"
                            android:textColor="@color/black"
                            android:drawableTop="@drawable/health"
                            android:padding="10dp"/>
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp">

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/btnDichVuSuaXoa"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Dịch vụ"
                            android:textSize="12sp"
                            android:background="@drawable/custom_button_danhmuc"
                            android:textColor="@color/black"
                            android:drawableTop="@drawable/service"
                            android:padding="10dp"
                            />

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/btnBaoHiemSuaXoa"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Bảo hiểm"
                            android:textSize="12sp"
                            android:background="@drawable/custom_button_danhmuc"
                            android:textColor="@color/black"
                            android:drawableTop="@drawable/insurance"
                            android:padding="10dp"/>

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/btnLamDepSuaXoa"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Làm đẹp"
                            android:textSize="12sp"
                            android:background="@drawable/custom_button_danhmuc"
                            android:textColor="@color/black"
                            android:drawableTop="@drawable/beautify"
                            android:padding="10dp"/>

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/btnChoVaySuaXoa"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Cho vay"
                            android:textSize="12sp"
                            android:background="@drawable/custom_button_danhmuc"
                            android:textColor="@color/black"
                            android:drawableTop="@drawable/loan"
                            android:padding="10dp"/>
                    </TableRow>
                </TableLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:background="@drawable/custom_linearlayout"
                android:paddingBottom="5dp">

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text=""
                    android:drawableLeft="@drawable/baseline_reorder_24"/>

                <EditText
                    android:id="@+id/txtMotaSuaXoa"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:gravity="start|top"
                    android:hint="Mô tả..."
                    android:inputType="textMultiLine"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:background="@drawable/custom_linearlayout"
                android:paddingBottom="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text=""
                    android:drawableLeft="@drawable/baseline_calendar_month_24"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Ngày:"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/txtChonNgaySuaXoa"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp"
                    android:paddingLeft="5dp"
                    android:layout_weight="1"
                    android:ems="10"
                    android:hint="Chọn ngày..."
                    android:inputType="text"
                    android:text=""
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearNguonThuSuaXoa"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:background="@drawable/custom_linearlayout"
                android:paddingBottom="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Nguồn thu:"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/txtNguonThuSuaXoa"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:hint="Nguồn thu..."
                    android:inputType="text"
                    android:text=""
                    android:textSize="20sp" />
            </LinearLayout>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnSua"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/baseline_save_24"
                android:text="Lưu"
                android:layout_margin="10dp"
                android:textAlignment="center"
                android:textSize="20sp"
                android:background="@drawable/custom_button_save"
                />
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnXoa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/baseline_delete_24"
                android:text="Xóa"
                android:layout_margin="10dp"
                android:textAlignment="center"
                android:textSize="20sp"
                android:background="#CA4141"
                />
        </LinearLayout>
    </ScrollView>
</FrameLayout>