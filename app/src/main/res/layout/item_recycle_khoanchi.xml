<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginTop="5dp"
    android:id="@+id/itemViewKT">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/item_idKhoanChi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:text=""/>
        <TextView
            android:id="@+id/item_idTaiKhoanKC"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:text=""/>
        <TextView
            android:id="@+id/item_idDanhMucKC"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:text=""/>
        <TextView
            android:id="@+id/itemMoTaKC"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:text=""/>
        <ImageView
            android:id="@+id/itemiconKhoanChi"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/food"
            android:scaleType="fitXY"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:id="@+id/itemNgayKhoanChi"
                android:textSize="15sp"
                android:gravity="center_vertical"
                android:paddingLeft="20dp"
                android:textStyle="bold"
                android:text="00/00/0000"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:id="@+id/itemSoTienKhoanChi"
                android:textSize="15sp"
                android:gravity="center_vertical"
                android:paddingLeft="20dp"
                android:textColor="#E42222"
                android:textStyle="bold"
                android:text="0 vnÄ‘"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text=""
                android:paddingRight="10dp"
                android:drawableRight="@drawable/baseline_east_24"
                />
        </LinearLayout>
    </LinearLayout>


</androidx.cardview.widget.CardView>